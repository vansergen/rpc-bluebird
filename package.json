{
  "name": "rpc-bluebird",
  "version": "2.0.1",
  "description": "Simple wrapper of the request-promise in a class",
  "main": "./build/index.js",
  "type": "commonjs",
  "types": "./build/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:test": "npm run build && npm run clean",
    "clean": "rm -rf ./build",
    "coverage": "nyc npm test && nyc report --reporter=lcov",
    "install:clean": "rm -fr node_modules && rm -f package-lock.json && npm install",
    "lint": "eslint --ext .ts,.js ./",
    "lint:fix": "npm run lint -- --fix",
    "postpublish": "npm run clean",
    "prepublishOnly": "npm run build && npm run lint:fix && npm run prettier:write",
    "prettier": "prettier -c \"**/*.{js,md,ts,json}\"",
    "prettier:write": "npm run prettier -- --write",
    "test": "mocha -r ts-node/register --full-trace --ui tdd --bail test/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vansergen/rpc-bluebird.git"
  },
  "engines": {
    "node": ">=10.18.1"
  },
  "keywords": [
    "rpc",
    "request",
    "bluebird"
  ],
  "author": "Sergey Bakulin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vansergen/rpc-bluebird/issues"
  },
  "homepage": "https://github.com/vansergen/rpc-bluebird#readme",
  "dependencies": {
    "@types/bluebird": "^3.5.32",
    "bluebird": "^3.7.2",
    "domexception": "^2.0.1",
    "node-fetch": "^3.0.0-beta.7"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "funding": {
    "type": "Coinbase Commerce",
    "url": "https://commerce.coinbase.com/checkout/0ddad386-6902-48d8-8026-47723a0203e6"
  },
  "directories": {
    "test": "test"
  }
}
