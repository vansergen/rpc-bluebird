{
  "name": "rpc-bluebird",
  "version": "2.0.3",
  "description": "Simple wrapper of the request-promise in a class",
  "main": "./build/index.js",
  "type": "commonjs",
  "types": "./build/index.d.ts",
  "scripts": {
    "prettier": "prettier -c \"**/*.{js,md,ts,json}\"",
    "prettier-write": "npm run prettier -- --write",
    "coverage": "nyc npm test && nyc report --reporter=lcov",
    "fresh-install": "rm -fr node_modules && rm -f package-lock.json && npm install",
    "build": "rm -fr build && tsc",
    "test": "mocha -r ts-node/register --full-trace --ui tdd --bail test/*.spec.ts",
    "lint": "eslint --ext .ts,.js ./",
    "lint-fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run prettier && npm run lint && npm run build && npm run prettier-write && npm run lint-fix",
    "postpublish": "rm -fr build",
    "snyk-protect": "npx snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vansergen/rpc-bluebird.git"
  },
  "engines": {
    "node": ">=10.18.1"
  },
  "keywords": [
    "rpc",
    "request",
    "bluebird"
  ],
  "author": "Sergey Bakulin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vansergen/rpc-bluebird/issues"
  },
  "homepage": "https://github.com/vansergen/rpc-bluebird#readme",
  "dependencies": {
    "@types/request-promise": "^4.1.46",
    "request": "^2.88.2",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "funding": {
    "type": "Coinbase Commerce",
    "url": "https://commerce.coinbase.com/checkout/0ddad386-6902-48d8-8026-47723a0203e6"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "directories": {
    "test": "test"
  },
  "snyk": true
}
